!!! 5
%html(ng-app="woodlist")
  %head
    %title Wood Pricing
    %script(src="https://code.jquery.com/jquery-1.12.1.min.js")
    %script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js")
    %script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js")
    %script(src="../js/app.js")
    %link{rel: "stylesheet", href: "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"}
    %script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
  %body.container
    %div{class: "row", ng-controller: "listController as listCtrl"}
      %table.table
        %thead
          %tr
            %th{ng-click: "listCtrl.sortBy = '-description'"} Descriptions 
            %th{ng-click: "listCtrl.sortBy = 'size'"} Size
            %th{ng-click: "listCtrl.sortBy = 'price'"} Price/lf
          %tr{ng-repeat: "product in listCtrl.products|orderBy:listCtrl.sortBy"}
            %td {{ product.description }}
            %td {{ product.size }}
            %td {{ product.price/product.length|currency }}

